{
  "name": "drain-backend",
  "version": "1.0.0",
  "description": "Multi-chain asset drain backend service with custody and mixing",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"redis-server --daemonize yes\" \"nodemon --watch src --exec ts-node src/index.ts\"",
    "dev:withdrawal": "nodemon --watch src --exec ts-node src/withdrawal-worker.ts",
    "dev:all": "npm run dev",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:studio": "npx prisma studio",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:withdrawal": "node dist/withdrawal-worker.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "version:major": "npm version major -m 'chore: bump major version to %s (multiple functionalities)'",
    "version:minor": "npm version minor -m 'chore: bump minor version to %s (single functionality/fixes)'",
    "version:patch": "npm version patch -m 'chore: bump patch version to %s (simple fixes/styling)'",
    "version:precommit": "node scripts/auto-version.js"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "@solana/spl-token": "^0.1.8",
    "@solana/web3.js": "^1.87.6",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.5",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "hdkey": "^2.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "prisma": "^7.0.0",
    "socket.io": "^4.6.0",
    "tronweb": "^6.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hdkey": "^2.1.0",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
